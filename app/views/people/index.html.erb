<h1><%= t("views.people.index.listing") %></h1>

<table>
    <tr>
        <th><%= t("activerecord.attributes.person.email") %></th>
        <th><%= t("activerecord.attributes.person.name") %></th>
        <th><%= t("activerecord.attributes.person.address") %></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

<% @people.each do |person| %>
    <tr>
        <td><%= person.email %></td>
        <td><%= person.name %></td>
        <td><%= person.address %></td>
        <td><%= link_to t("views.show"), person %></td>
        <td><%= link_to t("views.edit"), edit_person_path(person) %></td>
        <td><%= link_to t("views.destroy"), person, method: :delete, data: { confirm: t("views.are_you_sure") } %></td>
    </tr>
<% end %>
</table>

<br />

