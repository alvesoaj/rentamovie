                        <li class="<%= 'active' if current_page?(rents_path) %>"><%= link_to I18n.t("views.layouts.menu.rents"), rents_path %></li>
                        <li class="<%= 'active' if current_page?(roles_path) %>"><%= link_to I18n.t("views.layouts.menu.roles"), roles_path %></li>
                        <% if !user_signed_in? %>
                            <li class="<%= 'active' if current_page?(new_user_registration_path) %>"><%= link_to I18n.t("views.layouts.menu.sign_up"), new_user_registration_path %></li>
                            <li class="<%= 'active' if current_page?(new_user_session_path) %>"><%= link_to I18n.t("views.layouts.menu.sign_in"), new_user_session_path %></li>
                        <% else %>
                            <li class="<%= 'active' if current_page?(destroy_user_session_path) %>"><%= link_to I18n.t("views.layouts.menu.sign_out"), destroy_user_session_path, :method => :delete %></li>
                        <% end %>
                    </ul>
