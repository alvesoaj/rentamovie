                        <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to I18n.t("views.layouts.menu.index"), root_path %></li>
                        <li class="<%= 'active' if current_page?(people_path) %>"><%= link_to I18n.t("views.layouts.menu.people"), people_path %></li>
