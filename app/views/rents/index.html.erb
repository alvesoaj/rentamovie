<h1><%= t("views.rents.index.listing") %></h1>

<table>
  <tr>
    <th>Person</th>
    <th>Movie</th>
    <th>Value</th>
    <th>Created At</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rents.each do |rent| %>
  <tr>
    <td><%= rent.person.name %></td>
    <td><%= rent.movie.name %></td>
    <td><%= rent.value %></td>
    <td><%= l(rent.created_at) %></td>
    <td><%= link_to t("views.show"), rent %></td>
    <td><%= link_to t("views.edit"), edit_rent_path(rent) %></td>
    <td><%= link_to t("views.destroy"), rent, method: :delete, data: { confirm: t("views.are_you_sure") } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t("views.rents.index.new"), new_rent_path %>
